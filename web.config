<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>

    <!-- 1️⃣ URL Rewrite: Route everything to public/index.php -->
    <rewrite>
      <rules>
        <rule name="Rewrite to public" stopProcessing="true">
          <match url="^(.*)$" ignoreCase="false" />
          <conditions>
            <add input="{REQUEST_URI}" pattern="^/public/" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="public/{R:1}" />
        </rule>
      </rules>
    </rewrite>

    <!-- 2️⃣ Enable CORS globally (for API access from other domains) -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, PATCH, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With" />
      </customHeaders>
    </httpProtocol>

    <!-- 3️⃣ Optional: Improve performance -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>

    <!-- 4️⃣ Optional: Better error handling -->
    <httpErrors errorMode="Detailed" />

  </system.webServer>
</configuration>
